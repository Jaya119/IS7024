@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var Welcome = (QuickType.Welcome[])ViewData["Welcome"];

}

<!DOCTYPE html>
<html lang="en">
<body>
    @if (Model.IsCityNull)
    {
        <div> No City Selected </div>
    }

    <div class="container">
        <div class="jumbotron text-center" style="background-color:beige" src="~/Images/Travel_Advisor.jpg">
            <h1 class="display-4" style="color:darkblue"><strong>Travel Advisor</strong></h1>
            <img alt="logo" src="~/Images/Travel_Advisor.jpg" class="img-fluid" width="750" height="750">
        </div>

        <div class="container">
            <div class="row py-lg-3">
                <h2 class="display-4" style="color:darkblue">Book your next travel destination today!</h2>
            </div>
            <div class="row text-center">
                <p class="lead">Happiness is a way of travel, let travel advisor choose your happiness.</p>
            </div>
        </div>
        <div class="card-group">
            <div class="card">
                <img src="~/Images/beer_pints.jpg" class="card-img-top" alt="Buy">
                <div class="text-center">
                    <br />
                    <h5 class="card-title">Your Favourite Breweries</h5>
                    <p class="card-text">Any travel is incomplete without exploring good places to have some fun with your friends. Travel Advisory provides you the best breweries in each city.</p>
                    <form action="" method="POST" style="margin-top: 50px;">
                        <div class="form-group">
                            <label style="font-size:20px;" class="control-label" for="CountrySearch"><strong>Enter City</strong></label>
                            <input type="text" class="form-control" name="BreweryCity" id="BreweryCity" style="width:50%; margin-left:auto; margin-right:auto" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Search for Breweries" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <style>
                table {
                    border-collapse: separate;
                    border-spacing: 0 15px;
                }

                th {
                    background-color: #4287f5;
                    color: white;
                }

                th,
                td {
                    width: 700px;
                    text-align: center;
                    border: 1px solid black;
                    padding: 5px;
                }

                h2 {
                    color: #4287f5;
                }
            </style>
            @if (Model.IsSearchCity)
            {
                <table class="table table-striped table-light">
                    <thead class="thead-dark">
                        <tr>
                            <th>City</th>
                            <th>Phone</th>
                            <th>Name</th>
                        </tr>
                    </thead>

                </table>

                <table>
                    <tbody>
                        @foreach (QuickType.Welcome breweries in Welcome)
                        {
                            <tr>
                                <td>@breweries.City</td>
                                <td>@breweries.Phone</td>
                                <td>@breweries.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</body>
</html>
