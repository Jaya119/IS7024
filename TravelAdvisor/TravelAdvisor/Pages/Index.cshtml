@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var Welcome = (QuickType.Welcome[])ViewData["Welcome"];

}
<style>
    * {
        box-sizing: border-box;
    }

    /* Style the search field */
    form.example input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 80%;
        background: #f1f1f1;
    }

    /* Style the submit button */
    form.example button {
        float: left;
        width: 20%;
        padding: 10px;
        background: #2196F3;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none; /* Prevent double borders */
        cursor: pointer;
    }

        form.example button:hover {
            background: #0b7dda;
        }


    /* Clear floats */
    form.example::after {
        content: "";
        clear: both;
        display: table;
    }

</style>

<div class="container">
    <div class="row py-lg-3">
        <h2 class="display-4" style="color:darkblue">Book your next travel destination today!</h2>
    </div>
    <div class="row text-center">
        <p class="lead">Happiness is a way of travel, let travel advisor choose your happiness.</p>
    </div>
</div>
<div class="card-group">
    <div class="card">

        <img src="~/Images/eatery.jpg" class="card-img-top" alt="Buy">
        <div class="card-body">
            <br />
            <h5 class="card-title">Search by City</h5>
            <p class="card-text">Any travel is incomplete without finding good eateries. Travel Advisory provides you the best eateries in each city.</p>
            <form action="" method="POST" style="margin-top: 50px;">
                <div class="form-group">
                    <label style="font-size:20px;" class="control-label" for="CountrySearch"><strong>Enter City</strong></label>
                    <input type="text" class="form-control" name="BreweryCity" id="BreweryCity" style="width:50%" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search for Eateries" class="btn btn-primary" />
                </div>
            </form>


            @if (Model.isSearchCity)
            {
                <table class="table table-striped table-light">
                    <thead class="thead-dark">
                        <tr>
                            <th>City</th>
                            <th>Phone</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var eatery in Welcome)
                        {
                            <tr>
                                <td>@eatery.City</td>
                                <td>@eatery.Phone</td>
                                <td>@eatery.Name</td>

                            </tr>

                        }
                        }
                    </tbody>
                </table>
            }
        <img src="~/Images/us states.jpg" class="card-img-top" alt="Buy">
        <br />
        <div class="text-center">
            <h5 class="card-title">Search by State</h5>
            <p class="card-text">You can find your favorite vacations spots and hotel reviews in various states</p>
            <form method="get" class="" a href="https://worldpopulationreview.com/static/states/abbr-name-list.json">
                
                <label for="country">Search</label>
                <select id="state" name="state">
                    <option value="IA">Iowa</option>
                    <option value="IL">Illinois</option>
                    <option value="IN">Indiana</option>
                    <option value="KS">Kansas</option>
                    <option value="MI">Michigan</option>
                    <option value="MN">Minnesota</option>
                    <option value="MO">Missouri</option>
                    <option value="ND">North Dakota</option>
                    <option value="NE">Nebraska</option>
                    <option value="OH">Ohio</option>
                    <option value="SD">South Dakota</option>
                    <option value="WI">Wisconsin</option>
                    <option value="CT">Connecticut</option>
                    <option value="DE">Delaware</option>
                    <option value="MA">Massachusetts</option>
                    <option value="MD">Maryland</option>
                    <option value="ME">Maine</option>
                    <option value="NH">New Hampshire</option>
                    <option value="NJ">New Jersey</option>
                    <option value="NY">New York</option>
                    <option value="PA">Pennsylvania</option>
                    <option value="RI">Rhode Island</option>
                    <option value="VI">Virginia</option>
                    <option value="VT">Vermont</option>
                    <option value="WV">West Virgina</option>
                    <option value="AZ">Arizona</option>
                    <option value="CO">Colorado</option>
                    <option value="NM">New Mexico</option>
                </select>
                <a href="/DataIntegration" class="btn btn-primary">Submit</a>
            </form>
        </div>
    </div>
    <div class="card">
        <img src="~/Images/hotels.jpg" class="card-img-top" alt="Agents">
        <div class="card-body">
            <br />
            <h5 class="card-title">Hotel Reviews</h5>
            <p class="card-text">You can find reviews posted by travelors for reference, for your next vacation.</p>
            <a href="/Agents/List" class="btn btn-primary">Click here</a>

        </div>
    </div>

    <div class="card">
        <img src="~/Images/vacationspots.jpg" class="card-img-top" alt="Sales Office">
        <div class="card-body">
            <h5 class="card-title">List of vacation Spots</h5>
            <p class="card-text">TripAdvisor has done all work for you, you can find best vacation spots here.</p>
            <a href="/SalesOffices/List" class="btn btn-primary">Click here</a>
        </div>
    </div>
</div>
